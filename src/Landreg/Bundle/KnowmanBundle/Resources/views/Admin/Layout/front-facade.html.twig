{% extends 'LandregKnowmanBundle:Layout:layout.html.twig' %}

{% import "SonataAdminBundle:CRUD:base_edit_form_macro.html.twig" as form_helper %}

{% use 'SonataAdminBundle:CRUD:base_edit_form.html.twig' with form as parentForm %}

{% block stylesheets %}
    {{ parent() }}
    {% include "CmfCreateBundle::includecssfiles.html.twig" %}
    <link href="{{ asset('bundles/landregknowman/styles/preview.override.css') }}" rel="stylesheet">
{% endblock %}


{% block formactions %}
    {% if admin.id(object) is not null %}
        <input class="btn btn-success" type="submit" name="btn_preview_approve" value="{% trans from 'SonataAdminBundle' %}btn_update{% endtrans %}"/>
    {% else %}
        <input class="btn btn-success" type="submit" name="btn_preview_approve" value="{% trans from 'SonataAdminBundle' %}btn_create{% endtrans %}"/>
    {% endif %}

    <input class="btn btn-danger" type="submit" name="btn_preview_decline" value="{% trans from 'SonataAdminBundle' %}action_edit{% endtrans %}"/>
{% endblock %}


{% block main %}
    {% block show %}
        {% block preview %}
            <div class="sonata-ba-view">
                {% for name, view_group in admin.showgroups %}
                    <table class="table table-bordered">
                        {% if name %}
                            <tr class="sonata-ba-view-title">
                                <td colspan="2">
                                    {{ admin.trans(name) }}
                                </td>
                            </tr>
                        {% endif %}

                        {% for field_name in view_group.fields %}
                            <tr class="sonata-ba-view-container">
                                {% if admin.show[field_name] is defined %}
                                    {{ admin.show[field_name]|render_view_element(object) }}
                                {% endif %}
                            </tr>
                        {% endfor %}
                    </table>
                {% endfor %}
            </div>
        {% endblock %}
        {% block previewForm %}
            {{ block('parentForm') }}
        {% endblock %}
    {% endblock %}
{% endblock %}

{% block footer %}
{% endblock %}
